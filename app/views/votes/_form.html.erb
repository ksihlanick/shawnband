<div class="row center">
  
  <%= form_for(@vote) do |f| %>


  <%= f.hidden_field :song1, :value => @songs.first.key %>
  <%= f.hidden_field :song2, :value => @songs.last.key %>
  <%= f.hidden_field :ip, :value => @remoteip %>

  <div class="control-group">

    <div class="span6 right">
      <%= f.radio_button(:favsong, "1") %>
      <%= @songs.first.key %>
    </div>
    <div class="span6 right">
      <%= f.radio_button(:favsong, "2") %>
      <%= @songs.last.key %>
    </div>


    <%= f.submit "Vote Now!", class: "btn btn-large btn-primary", :disable_with => "Please wait..." %>

    <p></p>

    <div class="controls">
      <%= f.text_area :comment, :required => false, :placeholder => "Type a comment here!", :rows=>4 %>
    </div>
    
  </div>

  <% end %>
</div>